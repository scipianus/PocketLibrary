<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/detectByCoverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:onClick="detectByCover"
        app:bootstrapBrand="primary"
        app:bootstrapSize="lg"
        app:bootstrapText="@string/detect_by_cover_image"
        app:roundedCorners="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/detectByTextCoverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detectByCoverButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:onClick="detectByText"
        app:bootstrapBrand="primary"
        app:bootstrapSize="lg"
        app:bootstrapText="@string/detect_by_cover_text"
        app:roundedCorners="true" />
</RelativeLayout>